#include <iostream>
using namespace std;

class Figura{
    public:
        virtual double calcularArea() = 0;
};

class Circulo : public Figura{
    private:
        int radio;
    public:
        Circulo(int radio) : radio(radio) {}
        double calcularArea(){
            return 3.1415 * radio * radio;
        }
};

class Rectangulo : public Figura{
    private:
        int base;
        int altura;
    public:
        Rectangulo(int base, int altura) : base(base), altura(altura) {}
        double calcularArea(){
            return base * altura;
        }
};

class Triangulo : public Figura{
    private:
        int base;
        int altura;
    public:
        Triangulo(int base, int altura) : base(base), altura(altura) {}
        double calcularArea(){
            return (base * altura) / 2;
        }
};

int main(){
    int opc;
    double r,b,h;
    cout << "**MENU**" << endl;
    cout << "1. Circulo" << endl;
    cout << "2. Rectangulo" << endl;
    cout << "3. Triangulo" << endl;
    cout << "Escoja una figura: ";
    cin >> opc;
    switch (opc){
        case 1:{
            cout << "Ingrese el radio: ";
            cin >> r;
            Circulo c1(r);
            cout << c1.calcularArea() << endl;
            break;
        }
        case 2:{
            cout << "Ingrese la base: ";
            cin >> b;
            cout << "Ingrese la altura: ";
            cin >> h;
            Rectangulo r1(b,h);
            cout << r1.calcularArea() << endl;
            break;
        }
        case 3:{
            cout << "Ingrese la base: ";
            cin >> b;
            cout << "Ingrese la altura: ";
            cin >> h;
            Triangulo t1(b,h);
            cout << t1.calcularArea() << endl;
            break;
        }
        default:{
            cout << "Opción no válida";
            break;
        }
    }
    return 0;
}
