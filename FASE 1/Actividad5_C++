#Include <iostream>
using namespace std;
class Persona{
  private:
    string nombre;
    int edad;
  public:
    void Persona(string nombre, int edad){
      this->nombre = nombre;
      this->edad = edad;
    }
    void saludar(){
      cout << "Hola, soy " << nombre << " y tengo " << edad << " años.";
    }
};
class Estudiante : Persona{
  private:
    string carrera;
  public:
    void Estudiante{string nombre, int edad, string carrera){
      this->carrera = carrera;
    }
    void estudiar(){
      cout << nombre << " está estudianto " << carrera << endl;
    }
};

int maing(){
  Persona per1;
  per1.nombre = "Luis";
  per1.edad = 22;
  per1.carrera = "Ingenieria de sistemas";
