//Programa que calcula el factorial de un número
#include <iostream>
using namespace std;
int factorial(int n){
  if (n == 0){
    return 1;
  } else{
    return n * factorial(n-1);
  }
}
int main(){
  int num;
  cout << "Ingrese un número: " << endl;
  cin >> num;
  cout << factorial(num);
  return 0;
}
